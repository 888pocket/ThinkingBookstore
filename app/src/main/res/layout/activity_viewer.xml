<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewerActivity">

    <io.hamed.htepubreadr.ui.view.EpubView
        android:id="@+id/epub_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:layout_gravity="top">
        <ImageButton
            android:id="@+id/backbtn_viewer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:background="#FFFFFF" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/textprop_viewer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:background="#00FFFFFF"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:text="Aa"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/bookmark_viewer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_bookmark_border_24"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        android:weightSum="5">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:src="@drawable/btn_list"
            android:background="#FFFFFF"
            android:layout_weight="1"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#00FFFFFF"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:text="Aa"
            android:textSize="30dp"
            android:layout_weight="3"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_bookmark_border_24"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
    </LinearLayout>

</FrameLayout>